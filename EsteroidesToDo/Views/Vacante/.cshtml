@model List<UsuarioVacante>

@{
    ViewData["Title"] = "Postulantes";
}

<h2>Postulantes para: @ViewBag.VacanteTitulo</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var postulacion in Model)
        {
            <tr>
                <td>@postulacion.Usuario.Nombre</td>
                <td>@postulacion.Usuario.Email</td>
                <td>@postulacion.Estado</td>
                <td>
                    <form asp-action="CambiarEstado" method="post" style="display:inline">
                        <input type="hidden" name="usuarioId" value="@postulacion.UsuarioId" />
                        <input type="hidden" name="vacanteId" value="@ViewBag.VacanteId" />
                        <input type="hidden" name="nuevoEstado" value="Aceptado" />
                        <button type="submit" class="btn btn-success btn-sm">Aceptar</button>
                    </form>
                    <form asp-action="CambiarEstado" method="post" style="display:inline">
                        <input type="hidden" name="usuarioId" value="@postulacion.UsuarioId" />
                        <input type="hidden" name="vacanteId" value="@ViewBag.VacanteId" />
                        <input type="hidden" name="nuevoEstado" value="Ignorado" />
                        <button type="submit" class="btn btn-danger btn-sm">Ignorar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="MisVacantes" class="btn btn-secondary">Volver</a>
